{
  "variables": {
    "admin-password": "{{ env `VSPHEREPASSWORD`}}",
    "iso-url": "[iso-ds] {{ env `ISOPATH`}}",
    "vm-cpu-num": "2",
    "vm-disk-size": "{{ env `DISKSIZE`}}",
    "vm-mem-size": "4096",
    "vm-name": "{{ env `TEMPLATENAME`}}",
    "vm-guest-os": "{{ env `VMOS` }}",
    "vsphere-cluster": "CL0",
    "vsphere-datacenter": "DC0",
    "vsphere-datastore": "vm-ds",
    "vsphere-folder": "templates",
    "vsphere-network": "{{ env `TEMPLATENETWORKNAME` }}",
    "vsphere-password": "{{env `VSPHEREPASSWORD`}}",
    "vsphere-server": "vcsa.fsimonetti.lan",
    "vsphere-user": "administrator@vsphere.local"
  },
  "builders": [
    {
      "CPUs": "{{user `vm-cpu-num`}}",
      "RAM": "{{user `vm-mem-size`}}",
      "RAM_reserve_all": false,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `vm-guest-os` }}.cfg<enter><wait>"
      ],
      "cluster": "{{user `vsphere-cluster`}}",
      "convert_to_template": "true",
      "datacenter": "{{user `vsphere-datacenter`}}",
      "datastore": "{{user `vsphere-datastore`}}",
      "disk_controller_type": "pvscsi",
      "folder": "{{user `vsphere-folder`}}",
      "guest_os_type": "{{ user `vm-guest-os` }}",
      "http_directory": "ks",
      "insecure_connection": "true",
      "iso_paths": [
        "{{user `iso-url`}}"
      ],
      "network_adapters": [
        {
          "network": "{{user `vsphere-network`}}",
          "network_card": "vmxnet3"
        }
      ],
      "notes": "Built via Packer - {{isotime}}",
      "password": "{{user `vsphere-password`}}",
      "ssh_password": "{{user `admin-password`}}",
      "ssh_username": "root",
      "storage": [
        {
          "disk_size": "{{user `vm-disk-size`}}",
          "disk_thin_provisioned": true
        }
      ],
      "type": "vsphere-iso",
      "username": "{{user `vsphere-user`}}",
      "vcenter_server": "{{user `vsphere-server`}}",
      "vm_name": "{{user `vm-name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/iso/software/RSCD/RSCD89-SP4-LIN64.rpm",
      "destination": "/tmp/RSCD89-SP4-LIN64.rpm"
    },
    {
      "type": "file",
      "source": "/iso/software/SYSLOG-NG/syslog-ng-premium-edition-7.0.3-1.rhel7.x86_64.rpm",
      "destination": "/tmp/syslog-ng-premium-edition-7.0.3-1.rhel7.x86_64.rpm"
    },
    {
      "type": "ansible",
      "playbook_file": "./build.yml",
      "extra_arguments": [ 
        "-v",
        "--vault-password-file", 
        "~/.password",
        "--extra-vars",
        "@../deployvariables.yml" 
        ]
    }
  ]
}

